<%= form_for @question do |f| %>
  <div class="form_group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form_group">
    <%= f.label :content, class: "control-label" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
